<!-- /templates/customers/subscribe.liquid -->

<section id="Subscribe" class="center account">
  <section id="wrapperNarrow" class="col wrapper wrapper--narrow">
    <div class="customer-subscribe">
      <div class="account_title">SUBSCRIBE TO OUR NEWSLETTER</div>
      {% form 'create_customer' %}
        <div class="form-field">{{ form.errors | default_errors }}</div>
        <div class="form-field">
          <div class="account_text">EMAIL</div>
          <input
            type="email"
            value="{{ form.email }}"
            name="customer[email]"
            id="email"
            class="inputbox large{% if form.errors contains 'email' %} error{% endif %}"
            placeholder="{{ 'customer.Subscribe.email' | t }}">
        </div>
        <div class="form-field">
          <div class="account_text">FIRST NAME</div>
          <input
            type="text"
            value="{{ form.first_name }}"
            name="customer[first_name]"
            id="first_name"
            class="inputbox large"
            size="30"
            placeholder="{{ 'customer.Subscribe.first_name' | t }}">
        </div>
        <div class="form-field">
          <div class="account_text">LAST NAME</div>
          <input
            type="text"
            value="{{ form.last_name }}"
            name="customer[last_name]"
            id="last_name"
            class="inputbox large{% if form.errors contains 'last_name' %} error{% endif %}"
            placeholder="{{ 'customer.Subscribe.last_name' | t }}">
        </div>
        <div class="form-field">
          <div class="account_text">TITLE</div>
          <div class="flex_all">
            <input
              value="{{ form.title_one }}"
              id="title_one"
              type="checkbox"
              name="customer[title_one]" />
            <p class="input_text">Mr</p>
          </div>

          <div class="flex_all">
            <input
              value="{{ form[title_two] }}"
              id="title_three"
              type="checkbox"
              name="customer[title_two]" />
            <p class="input_text">Miss,Mrs,Ms</p>
          <div class="flex_all">

            <input
              value="{{ form.title_three }}"
              id="title_three"
              type="checkbox"
              name="customer[title_three]" />
            <p class="input_text">Mx</p>
          </div>

          <div class="flex_all">
            <input
              value="{{ form.title_four }}"
              id="title_four"
              type="checkbox"
              name="customer[title_four]" />
            <p class="input_text">I'd rather not to say</p>
          </div>
        </div>
        <div class="form-field">
          <div class="flex_all">
            <input
              value="{{ form.subscribe }}"
              id="subscribe"
              type="checkbox"
              name="customer[note][Subscribe]" />
            <p class="input_text">By signing up you agree to receive updates from FOUNDO world, including new collection launches and early access to future collectibles, limited releases and capsule collaborations. For more information please consult our privacy policy.</p>
          </div>
        </div>
        <button type="submit" class="createabtn">{{ 'customer.Subscribe.submit' | t }}
        </button>
      {% endform %}
    </div>
    <script>

    </script>
  </section>
</section>